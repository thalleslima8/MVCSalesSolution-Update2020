@model MVCSalesSolution.Models.Seller
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter your name" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">E-mail</label>
                    <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="example@email.com - Enter your e-mail" />
                    <small id="emailHelp" class="form-text">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate">Birth Date</label>
                    <input asp-for="BirthDate" type="date" class="form-control" placeholder="1990/08/12" />
                </div>
                <div class="form-group">
                    <label asp-for="BaseSalary">Base Salary</label>
                    <input asp-for="BaseSalary" type="number" class="form-control" value="0.00" />
                </div>
                <!--   <div class="form-group">
                   <label asp-for="Department">Department</label>
                   <select asp-for="Department" class="form-control">
                       <option selected>Choose your department...</option>
                       <option>example1</option>
                       <option>example2</option>
                       <option>example3</option>
                       <option>example4</option>
                       <option>example5</option>
                   </select>
                 </div>-->
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
</div>